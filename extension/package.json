{
	"name": "fuwafuwa-background",
	"displayName": "ふわふわ(Fuwafuwa) Background",
	"description": "fuwafuwa-background is an editor background extension with image process. Fuwafuwa can segment font object with white background",
	"version": "1.0.4",
	"publisher": "AlanLi7991",
	"author": "AlanLi7991",
	"repository": {
		"type": "git",
		"url": "https://github.com/AlanLi7991/fuwafuwa-background.git"
	},
	"engines": {
		"vscode": "^1.40.0"
	},
	"icon": "media/icon.png",
	"categories": [
		"Themes",
		"Other"
	],
	"keywords": [
		"Background",
		"Theme"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fuwafuwa.install",
				"title": "Fuwafuwa: 启用ふわふわ / Install"
			},
			{
				"command": "fuwafuwa.configure",
				"title": "Fuwafuwa: 配置ふわふわ / Configure"
			}
		],
		"configuration": {
			"title": "Fuwafuwa ふわふわ",
			"properties": {
				"fuwafuwa.hidden": {
					"type": "boolean",
					"default": false,
					"description": "隐藏ふわふわ背景 / hidden fuwafuwa background"
				},
				"fuwafuwa.segment": {
					"type": "boolean",
					"default": false,
					"description": "自动切图 / segment image"
				},
				"fuwafuwa.random": {
					"type": "boolean",
					"default": true,
					"description": "随机背景图片 / use random image"
				},
				"fuwafuwa.interval": {
					"type": "number",
					"maximum": 3600,
					"minimum": 1,
					"default": 30,
					"description": "图片随机间隔秒数(需重新启用) / image random interval second (reinstall to active)"
				},
				"fuwafuwa.style": {
					"type": "object",
					"default": {
						"position": "absolute",
						"top": "auto",
						"right": "auto",
						"bottom": "auto",
						"left": "auto",
						"width": "100%",
						"height": "100%",
						"custom": "background-position: center center; transition: background-image 1s ease-in-out;"
					},
					"properties": {
						"position": {
							"type": "string",
							"description": "默认值absolute(default absolute)"
						},
						"top": {
							"type": "string",
							"description": "默认值auto(default auto)"
						},
						"right": {
							"type": "string",
							"description": "默认值auto(default auto)"
						},
						"bottom": {
							"type": "string",
							"description": "默认值auto(default auto)"
						},
						"left": {
							"type": "string",
							"description": "默认值auto(default auto)"
						},
						"width": {
							"type": "string",
							"description": "默认值100%(default 100%)"
						},
						"height": {
							"type": "string",
							"description": "默认值100%(default 100%)"
						},
						"custom": {
							"type": "string",
							"description": "自定义CSS(custom css style) default: background-position: center center;"
						}
					},
					"description": "图片CSS样式(需重新启用) / image CSS style (reinstall to active)"
				},
				"fuwafuwa.opacity": {
					"type": "number",
					"maximum": 1,
					"minimum": 0,
					"default": 0.2,
					"description": "图片CSS透明度(需重新启用) / image CSS opacity (reinstall to active)"
				},
				"fuwafuwa.image": {
					"type": "string",
					"default": "",
					"description": "固定背景图片路径 / fix background image path"
				},
				"fuwafuwa.folder": {
					"type": "string",
					"default": "",
					"description": "文件夹路径 / image folder path"
				},
				"fuwafuwa.cache": {
					"type": "string",
					"default": "",
					"description": "缓存路径 / cache folder path"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint"
	},
	"devDependencies": {
		"@types/vscode": "^1.40.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"node-addon-api": "^3.0.0"
	}
}
